<h2>Our products</h2>

<% @products.each do |p| %>
<div class="product">
	<%= image_tag p.image( :medium) %>
	<h3><%= link_to p.title, product_path(p) %></h3>
	<p><%= p.price_in_pence %></p>
	<p><%= link_to "Read more...", product_path(p) %></p>

	<% if basket.include?(p.id) %>

	<%= link_to "Remove from basket", product_basket_path(@product), method: :delete %>

	<% else %>
	
	<%= link_to "Add to Basket", product_basket_path(@product), method: :post %>
	<% end %>

</div>

<% end %>
